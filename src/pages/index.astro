---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
import Badge from "../components/Badge.astro";
import Divider from "../components/Divider.astro";
import type { Project } from "../types/project.ts";
import type { Resume } from "../types/resume.ts";
import ResumeList from "../components/ResumeList.astro";
import ProjectCardList from "../components/ProjectCardList.astro";
import ProjectCardListPlaceholder from "../components/ProjectCardListPlaceholder.astro";

const projects: Project[] = [];

const education: Resume = {
  title: "Education",
  subtitle: "Ausbilding",
  items: [
    {
      title: "BSc in Computer Science",
      duration: "Sep, 2021 - Jun, 2024",
      link: {
        text: "FHTW",
        href: "https://www.technikum-wien.at/en/",
      },
    },
    {
      title: "MSc in Software Engineering",
      duration: "Oct, 2024 - Present",
      link: {
        text: "TU Wien",
        href: "https://www.tuwien.at/en/",
      },
    },
  ],
};

const work: Resume = {
  title: "Work",
  subtitle: "Arbeit",
  items: [
    {
      title: "Web Developer",
      duration: "Jul, 2022 - Dec, 2024",
      link: {
        text: "Austrosoft",
        href: "https://www.fms.at/?lang=en",
      },
    },
  ],
};

const skills = [
  "HTML",
  "CSS",
  "Javascript",
  "TypeScript",
  "Node.js",
  "Vue.js",
  "PHP",
  "Laravel",
  "SQL",
  "PostgreSQL",
  "SQLite",
  "Git",
  "Docker",
  "AWS",
];
---

<BaseLayout>
  <div class="bg-white">
    <section class="mx-auto flex max-w-6xl justify-center px-6 sm:px-12">
      <div
        class="flex flex-col items-center gap-12 py-12 lg:flex-row-reverse lg:justify-evenly lg:py-24"
      >
        <img
          src="cropped_image.png"
          alt="A picture of myself"
          class="mx-auto h-auto w-full max-w-xs lg:mx-0 lg:mb-0 lg:max-w-md"
        />
        <h1
          class="font-rubik text-center text-5xl font-semibold sm:text-6xl lg:text-left"
        >
          <span class="text-sage">Hello!</span>
          I'm Raoul Wograndl.
        </h1>
      </div>
    </section>

    <section class="bg-light-gray flex justify-center py-16">
      <div class="w-full max-w-6xl px-6 sm:px-12">
        <h2 class="font-rubik text-4xl text-neutral-900">Projects</h2>
        <span class="text-neutral-500">Projekte</span>

        {
          projects.length > 0 ? (
            <ProjectCardList projects={projects} />
          ) : (
            <ProjectCardListPlaceholder />
          )
        }
      </div>
    </section>

    <section class="mx-auto max-w-6xl px-6 py-16 sm:px-12" id="about">
      <h2 class="font-rubik text-4xl text-neutral-900">About me</h2>
      <span class="text-neutral-500">Ãœber mich</span>

      <p class="mt-8">
        I am a software engineering student and aspiring full-stack developer
        specializing in <span class="text-sage font-bold">PHP</span>, <span
          class="text-sage font-bold">Laravel</span
        >, and <span class="text-sage font-bold">Vue.js</span>. I dedicate my
        free time to building modern web applications with a strict emphasis on
        clean architecture and industry best practices. My goal is to bridge the
        gap between complex back-end logic and intuitive user experiences while
        honing my technical skills.
      </p>
      <p class="mt-4">
        Outside of my student life, I'm a big believer in staying active and
        feeding my own curiosity. When I'm not working on my latest project,
        you'll find me at the gym, listening to new music or diving into a video
        game. I find that physical activity helps me break out of the sometimes
        stressful day-to-day while keeping my mind sharp, and exploring games
        contributes to my ability of being a more creative problem solver.
      </p>
    </section>

    <section class="bg-light-gray flex justify-center py-16" id="resume">
      <div class="w-full max-w-6xl px-6 sm:px-12">
        <h2 class="font-rubik text-4xl text-neutral-900">Resume</h2>
        <span class="text-neutral-500">Lebenslauf</span>

        <div class="my-8 grid grid-cols-1 gap-8 sm:grid-cols-2">
          <ResumeList resume={education} />

          <Divider />

          <ResumeList resume={work} />
        </div>

        <Divider />

        <div class="mt-8">
          <h3 class="font-rubik text-2xl text-neutral-900">Skills</h3>
          <span class="text-sm text-neutral-500">Fertigkeiten</span>
          <div class="mt-4 flex flex-wrap gap-1 sm:gap-2">
            {skills.map((skill) => <Badge>{skill}</Badge>)}
          </div>
        </div>
      </div>
    </section>

    <section
      class="bg-dark-gray flex justify-center py-16 text-white"
      id="contact"
    >
      <div class="w-full max-w-6xl px-6 sm:px-12">
        <h2 class="font-rubik text-4xl">Contact</h2>
        <span class="text-neutral-300">Kontakt</span>

        <p class="mt-8 text-lg text-neutral-200">
          Feel free to send me an email at
          <a
            href="mailto:wograndl.raoul@gmail.com"
            class="text-white underline"
          >
            wograndl.raoul@gmail.com
          </a> or hit me up on my socials!
        </p>
      </div>
    </section>
  </div>
</BaseLayout>
