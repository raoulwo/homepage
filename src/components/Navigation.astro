---
import "../styles/global.css";
---

<header class="sticky top-0 z-10 bg-white">
  <nav
    class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4 sm:px-12"
  >
    <a href="/" class="font-rubik -m-1.5 p-1.5 text-2xl lowercase">raoulwo</a>
    <div class="flex md:hidden">
      <button
        type="button"
        command="show-modal"
        commandfor="mobile-menu"
        class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700"
      >
        <svg
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          data-slot="icon"
          aria-hidden="true"
          class="size-6"
        >
          <path
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </button>
    </div>
    <div class="hidden md:flex md:gap-x-8">
      <a href="/#about" class="font-semibold hover:underline">About</a>
      <a href="/#contact" class="font-semibold hover:underline">Contact</a>
      <a href="/projects" class="font-semibold hover:underline">Projects</a>
    </div>
  </nav>
  <el-dialog>
    <dialog id="mobile-menu" class="backdrop:bg-transparent md:hidden">
      <div tabindex="0" class="fixed inset-0 focus:outline-none">
        <el-dialog-panel
          class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-4 sm:px-12 sm:ring-1 sm:ring-gray-900/10 md:max-w-md"
        >
          <div class="flex items-center justify-between">
            <a href="/" class="font-rubik -m-1.5 p-1.5 text-2xl lowercase"
              >raoulwo</a
            >
            <button
              type="button"
              command="close"
              commandfor="mobile-menu"
              class="-m-2.5 rounded-md p-2.5 text-gray-700"
            >
              <svg
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="1.5"
                data-slot="icon"
                aria-hidden="true"
                class="size-6"
              >
                <path
                  d="M6 18 18 6M6 6l12 12"
                  stroke-linecap="round"
                  stroke-linejoin="round"></path>
              </svg>
            </button>
          </div>
          <div class="mt-6 flow-root">
            <div class="-my-6 divide-y divide-gray-500/10">
              <div class="space-y-2 py-6">
                <a
                  href="/#about"
                  class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold hover:bg-neutral-100"
                  >About</a
                >
                <a
                  href="/#contact"
                  class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold hover:bg-neutral-100"
                  >Contact</a
                >
                <a
                  href="/projects"
                  class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold hover:bg-neutral-100"
                  >Projects</a
                >
              </div>
            </div>
          </div>
        </el-dialog-panel>
      </div>
    </dialog>
  </el-dialog>
</header>
